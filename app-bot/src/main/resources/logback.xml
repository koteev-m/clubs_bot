<configuration>
    <property name="APP_ENV" value="${APP_ENV:-dev}" />

    <conversionRule conversionWord="maskedMsg" class="com.example.bot.logging.MessageMaskingConverter" />

    <turboFilter class="com.example.bot.logging.DenySensitiveTurboFilter" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="com.example.bot.logging.AppEnvFilter">
            <requiredEnv>prod</requiredEnv>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <loggerName />
                <threadName />
                <pattern>
                    <pattern>{"message":"%maskedMsg"}</pattern>
                </pattern>
                <mdc />
            </providers>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="com.example.bot.logging.AppEnvFilter">
            <requiredEnv>prod</requiredEnv>
            <onMatch>NEUTRAL</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <loggerName />
                <threadName />
                <pattern>
                    <pattern>{"message":"%maskedMsg"}</pattern>
                </pattern>
                <mdc />
            </providers>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <logger name="com.example.bot.routes" level="DEBUG" />
    <logger name="com.example.bot.webapp" level="DEBUG" />
</configuration>
